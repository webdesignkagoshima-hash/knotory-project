{
  "extends": "stylelint-config-recommended-scss",
  "rules": {
    "scss/at-import-no-partial-leading-underscore": null,
    "selector-class-pattern": [
      "^(c|p|l|u|js|is)-[a-zA-Z0-9]+(__[a-zA-Z0-9]+)?(__[a-zA-Z0-9]+)?$",
      {
        "message": "Class selector should follow the PLOCSS naming convention: c|p|l|u-Block__Element__Modifier"
      }
    ],
    "scss/at-rule-no-unknown": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["use", "include", "function", "mixin", "return"]
      }
    ]
  }
}
